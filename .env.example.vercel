# Example environment variables for Vercel deployment
# Copy these to Vercel Dashboard > Settings > Environment Variables

# Database - Get from Railway or your PostgreSQL provider
DATABASE_URL="postgresql://user:password@host:port/database"

# NextAuth - Generate secret at https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-generated-secret-here"
NEXTAUTH_URL="https://your-app.vercel.app"

# Stripe (optional - use dummy values for testing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_dummy"
STRIPE_SECRET_KEY="sk_test_dummy"
STRIPE_WEBHOOK_SECRET="whsec_dummy"

# Mapbox (optional - use dummy value for testing)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.dummy"

# Skip validation during build
SKIP_ENV_VALIDATION="1"
NODE_ENV="production"